generator client {
  provider = "prisma-client-js"
}
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model User{
  id String @id 
  user String
  pass String
  email String?

  favoriteList Favorites[]
  buy Purchase[]
  Cart UserCart?
}
model Product{
  id String @id
  name String
  value Float
  tag String[]
  sells Purchase[]
  favoriteby Favorites[]
  wantedBy CartList[]
}
model Purchase{
  id String @id
  idProduct String
  idBuyer String
  date DateTime

  idBuyerRef User @relation(fields: [idBuyer],references: [id])
  idProductRef Product @relation(fields: [idProduct], references: [id])
}
model Favorites{
  id String @id
  idUser String 
  idProduct String

  idUserRef User @relation(fields: [idUser],references: [id])
  idProductRef Product @relation(fields: [idProduct],references: [id])

  @@unique([idUser,idProduct])
}
model UserCart{
  id String @id
  idUser String @unique
  idCartList String? @unique
  userRef User @relation(fields: [idUser],references: [id])
  cartList CartList[]
}
model CartList{
  id String @id
  idProduct String
  idUserCart String
  
  idproduct Product @relation(fields: [idProduct],references: [id])
  userCart UserCart @relation(fields: [idUserCart],references: [id])
}